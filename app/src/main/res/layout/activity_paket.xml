<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsplash">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/prosedur"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_home_wave"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/prosedur">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="592dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/Judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="PROSEDUR BOOKING LAYANAN"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtisi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Judul"
                        android:layout_marginTop="20dp"
                        android:text="Login akun anda."
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtisi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtisi1"
                        android:layout_marginTop="20dp"
                        android:text="Klik register, jika anda belum mempunyai akun."
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtisi3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtisi2"
                        android:layout_marginTop="20dp"
                        android:text="Klik halaman prosedur untuk mengetahui prosedur untuk booking layanan."
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtisi4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtisi3"
                        android:layout_marginTop="20dp"
                        android:text="Booking layanan service."
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtisi5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtisi4"
                        android:layout_marginTop="20dp"
                        android:text="Isi data untuk booking service."
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtisi6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtisi5"
                        android:layout_marginTop="20dp"
                        android:text="Klik DONE jika sudah selesai mengisi data dan admin kami akan menghubungi untuk layanan service di tanggal yang sudah anda tentukan."
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />


                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>